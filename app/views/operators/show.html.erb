<p id="notice"><%= notice %></p>

<div style="float:<% if @operator.role == 'Defender' %>right<% else %>left<% end %>;" class="img">
  <img id="op" src="/assets/small-<%= @operator.name %>.png" alt="">
</div>

<div style="float:<% if @operator.role == 'Defender' %>right<% else %>left<% end %>;" class="img">
  <img id="gadget" src="/assets/<%= @operator.name %>_gadget.png" alt="">
</div>

<div class="info" style="clear: both;">
  <p>
    <strong>Pick rate:</strong>
    <%= @operator.pick_rate %>
  </p>

  <p>
    <strong>Win rate:</strong>
    <%= @operator.win_rate %>
  </p>

  <p>
    <strong>Guns:</strong>
    <% @guns.each do |gun| %>
    <% if gun.operators.detect{|o| o.name == @operator.name} %>
    <%= link_to gun.name, gun_path %>
    <% end %>
    <% end %>
  </p>
</div>

<%= link_to 'Edit', edit_operator_path(@operator) %> |
<%= link_to 'Back', operators_path %>
<footer>
  <nav>
    <ul>
      <a href="<%= root_path %>"><li>HOME</li></a>
      <a href="<%= siege_operators_path %>"><li>OPERATORS</li></a>
      <a href="<%= siege_guns_path %>"><li>GUNS</li></a>
    </ul>
  </nav>
</footer>
