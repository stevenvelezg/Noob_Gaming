<p id="notice"><%= notice %></p>

<h1 style="text-decoration: underline; text-align: center; margin-bottom: 50px;">Search Weapons</h1>

<div class="search">
  <h3 style="margin-top: 0;">CTU</h3>
  <ul>
    <% @guns.find_by_sql("SELECT DISTINCT organization FROM guns ORDER BY organization").each do |gun| %>
    <a href="/siege/guns/o/<%= gun.organization %>"><li><%= gun.organization %></li></a>
    <% end %><br />
  </ul>
  <h3 style="margin-top: 0;">Weapon Type</h3>
  <ul>
    <% @guns.find_by_sql("SELECT DISTINCT weapon_type FROM guns ORDER BY weapon_type").each do |gun| %>
    <a href="/siege/guns/t/<%= gun.weapon_type %>"><li><%= gun.weapon_type %></li></a>
    <% end %>
  </ul>
</div>

<div class="guns">
  <% @guns.each do |gun| %>
    <%= link_to siege_gun_path(gun), class: "gunLink" do %>
        <div class="gun">
          <div class="hoverEffect"></div>
          <img src="https://s3.us-east-2.amazonaws.com/noob-gaming-assets/<%= gun.name %>.jpg"><br/>
          <br>
          <%= gun.name %>
        </div>
    <% end %>
  <% end %>
</div>
<footer>
  <nav>
    <ul>
      <a href="<%= root_path %>"><li>HOME</li></a>
      <a href="<%= siege_operators_path %>"><li>OPERATORS</li></a>
      <a href="<%= siege_guns_path %>"><li>GUNS</li></a>
    </ul>
  </nav>
</footer>
